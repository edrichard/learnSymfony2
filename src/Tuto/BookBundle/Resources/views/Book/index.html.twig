{% extends 'BookBundle::layout.html.twig' %}

{% block title %}{{'book.list' | trans }}{% endblock %}

{% block content %}

<table class="records_list">
    <thead>
        <tr>
            <th>{{ 'book.name' | trans }}</th>
            <th>{{ 'book.price' | trans }}</th>
            <th>{{ 'actions' | trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('book_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
            <td>{{ entity.price }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('book_show', { 'id': entity.id }) }}">{{ 'actions.action.show' | trans }}</a>
                    </li>
                    <li>
                        <a href="{{ path('book_edit', { 'id': entity.id }) }}">{{ 'actions.action.edit' | trans }}</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('book_new') }}">
            {{ 'actions.action.new' | trans }}
        </a>
    </li>
</ul>

{% endblock %}