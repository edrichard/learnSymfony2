{% extends 'BookBundle::layout.html.twig' %}

{% block title %}{{'book.list' | trans }}{% endblock %}

{% block content %}

<table class="records_list" border="1" width="100%">
    <thead>
        <tr>
            <th>{{ 'book.name' | trans }}</th>
            <th>{{ 'book.price' | trans }}</th>
            <th colspan="2">{{ 'actions' | trans }}</th>
        </tr>
    </thead>
    <tbody>
    {% for book in books %}
        <tr class="{{ cycle(['even','odd'],loop.index) }}">
            <td><a href="{{ path('book_show', { 'id': book.id }) }}">{{ book.name }}</a></td>
            <td>
                {{ book.price }} 
            </td>
            <td><a href="{{ path('book_show', { 'id': book.id }) }}">{{ 'actions.action.show' | trans }}</a></td>
            <td><a href="{{ path('book_edit', { 'id': book.id }) }}">{{ 'actions.action.edit' | trans }}</a></td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">{{ 'actions.action.noresult' | trans }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('book_new') }}">
    <img src="{{ asset('bundles/tutobook/images/arrowLeft.png') }}" alt="arrow" />{{ 'actions.action.new' | trans }}
</a>

{% endblock %}